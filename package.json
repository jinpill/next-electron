{
  "name": "next-electron",
  "version": "0.1.0",
  "private": true,
  "main": "main/build/index.js",
  "packageManager": "pnpm@8.2.0",
  "scripts": {
    "start": "electron .",
    "dev:render": "next dev renderer -p 8888",
    "dev:main": "pnpm build:preloads && pnpm build:main && pnpm start",
    "test": "pnpm build:render && pnpm build:main && TEST=true pnpm start",
    "build:render": "next build renderer && next export renderer",
    "build:preloads": "pnpm build:preloads-clean && pnpm build:preloads-tsc && pnpm build:preloads-alias",
    "build:preloads-clean": "rm -rf renderer/build/preloads",
    "build:preloads-tsc": "tsc --project renderer/tsconfig.preloads.json --outDir renderer/build/preloads",
    "build:preloads-alias": "tsc-alias --project renderer/tsconfig.preloads.json --outDir renderer/build/preloads",
    "build:main": "pnpm build:main-clean && pnpm build:main-tsc && pnpm build:main-alias",
    "build:main-clean": "rm -rf main/build",
    "build:main-tsc": "tsc --project main/tsconfig.json --outDir main/build",
    "build:main-alias": "tsc-alias --project main/tsconfig.json --outDir main/build",
    "ci": "pnpm install --frozen-lockfile"
  },
  "devDependencies": {
    "@types/node": "18.15.11",
    "@types/react": "18.0.33",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "electron": "^24.0.0",
    "eslint": "8.37.0",
    "eslint-config-next": "13.2.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "next": "13.2.4",
    "prettier": "^2.8.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tsc-alias": "^1.8.5",
    "typescript": "5.0.3"
  },
  "dependencies": {
    "electron-devtools-installer": "^3.2.0",
    "electron-store": "^8.1.0",
    "next-electron-server": "^1.0.0"
  }
}
