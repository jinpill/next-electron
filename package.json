{
  "name": "next-electron",
  "description": "This project is a template for building desktop applications with Next.js and Electron. ⚡️",
  "author": {
    "name": "Jinpill Lee",
    "email": "hello@jinpill.dev"
  },
  "homepage": "https://jinpill.github.io/",
  "version": "0.2.1",
  "private": true,
  "main": "dist/main/index.bundle.js",
  "packageManager": "pnpm@8.7.1",
  "scripts": {
    "start": "electron .",
    "dev:render": "next dev src/renderer -p 8888",
    "dev:main": "pnpm compile:preloads && pnpm compile:main && pnpm start",
    "compile:render": "next build src/renderer && next export src/renderer",
    "compile:preloads": "rm -rf dist/preloads && webpack --config webpack/preloads.config.js",
    "compile:main": "rm -rf dist/main && webpack --config webpack/main.config.js",
    "build": "pnpm build:clean && pnpm compile:render && pnpm compile:main && pnpm build:script",
    "build:staging": "cross-env IS_STAGING=true pnpm build",
    "build:script": "node scripts/build.js",
    "build:clean": "rm -rf build",
    "ci": "pnpm install --frozen-lockfile"
  },
  "devDependencies": {
    "@types/cli-color": "^2.0.2",
    "@types/node": "18.15.11",
    "@types/react": "18.0.33",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "cross-env": "^7.0.3",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.3",
    "eslint": "8.37.0",
    "eslint-config-next": "13.2.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "next": "13.2.4",
    "prettier": "^2.8.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-loader": "^9.4.4",
    "tsc-alias": "^1.8.5",
    "typescript": "5.0.3"
  },
  "dependencies": {
    "cli-color": "^2.0.3",
    "electron-store": "^8.1.0",
    "next-electron-server": "^1.0.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
